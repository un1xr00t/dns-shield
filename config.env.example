# ===========================================
# Server Hardening Configuration
# ===========================================
# Copy this file to config.env and fill in your values
# cp config.env.example config.env

# Domain Configuration
DOMAIN="example.com"
WWW_DOMAIN="www.example.com"

# Server Configuration
SERVER_IP="YOUR_SERVER_IP"
SSH_PORT="22"

# Website Path
WEBSITE_ROOT="/var/www/html"
WEBSITE_DIST="/var/www/html/dist"

# SSL Configuration (for Let's Encrypt)
SSL_EMAIL="your-email@example.com"

# Monitoring Configuration (Optional)
# Leave empty to skip monitoring setup
N8N_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""

# Swap Configuration
SWAP_SIZE="1G"
SWAPPINESS="60"

# fail2ban Configuration
SSH_MAXRETRY="3"
SSH_BANTIME="3600"
BOT_BANTIME="86400"
